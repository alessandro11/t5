<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table class="table">
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>Address</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.id %></td>
        <td><%= person.last_name %></td>
        <td><%= person.first_name %></td>
        <td><%= person.address %></td>
        <td><%= person.city %></td>
        <td><%= link_to 'Show', person %></td>
        <% if get_permission %>
           <td><%= link_to 'Edit', edit_person_path(person) %></td>
           <td><%= link_to 'Destroy', person, method: :delete, data:
                   {confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if get_permission %>
  <%= link_to 'New Person', new_person_path %>
<% end %>
<br>

<%= form_tag(professions_path, { :method => :get, :remote => true }) do %>
    <fieldset>
        <legend>Search profession via AJAX</legend>
        <div class="field">
            Person Id:<br />
            <%= text_field_tag :nome %>
        </div>
        <div class="actions">
            <%= submit_tag "Procurar" %>
        </div>
    </fieldset>
<% end %>

<div id="ajax_load">
  <%= render 'tab_professions' %>.
</div>

