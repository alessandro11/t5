<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="col-md-12">
  <div class="col-md-6 col-offset-2">
	<%= form_for(:session, url: login_path) do |f| %>
	<%= f.label :user %>
	<%= f.text_field :user, class: 'form-control' %>

	<%= f.label :password %>
	<%= f.password_field :password, class: 'form-control' %>

	<%= f.submit "Log in", id: "log-in", class: "btn btn-primary" %>
	<% end %>
  </div>
</div>
